@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Authors Available in Library</h1>

@if (@Model.Count == 0)
{
  <h3>No Authors Added</h3>
}

<ul>
  @foreach(Author authorElement in Model)
  {
    <li>@Html.ActionLink($"{authorElement.Name}", "Details", new {id = authorElement.AuthorId}) </li>
  }
</ul>

<p>@Html.ActionLink("Add New author", "Create")</p>
<p>@Html.ActionLink("Refresh Page", "Index")</p>