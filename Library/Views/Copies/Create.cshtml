@{
  Layout = "_Layout";
}

@model Library.Models.Copy

<h4>Rent new book</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.DueDate)
  @Html.TextBoxFor(model => model.DueDate, new {type= "date"})
  @Html.Label("Select Book")
  @Html.DropDownList("BookId")

  <input type="submit" value="Add new item" class="btn btn-success"/>

}
<p>@Html.ActionLink("Show all rented copies", "Index")</p>